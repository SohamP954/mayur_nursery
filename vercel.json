{
  "version": 2,
  "builds": [
    {
      "src": "*.php",
      "use": "@vercel/php"
    },
    {
      "src": "components/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.php",
      "dest": "/$1.php"
    },
    {
      "src": "/(.*\\.(?:png|jpg|jpeg|gif|svg|webp|ico))",
      "dest": "/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/plants/(.*)",
      "dest": "/plants/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
